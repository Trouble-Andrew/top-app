{
  "extends": ["next/core-web-vitals", "airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "no-undef": "off",
    "prettier/prettier": ["error"],
    "class-methods-use-this": ["error", { "exceptMethods": ["render"] }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
