{
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": ["prettier"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-undef": "off",
    "prettier/prettier": ["error"],
    "react/jsx-props-no-spreading": "off"
  },
  "globals": {
    "React": "readonly"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    }
  ]
}
